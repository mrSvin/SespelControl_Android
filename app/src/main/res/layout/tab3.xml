<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-41dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <ProgressBar
                android:id="@+id/progress_bar_tab3"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/temp_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="темп"
                android:textColor="#0B0B0C"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="120dp"
                android:background="#B3A7D1"
                android:text="Статистика"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView32" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="#8CADF0"
                android:text="Выбранный интервал"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_refresh_tab3"
                android:layout_width="105dp"
                android:layout_height="42dp"
                android:layout_marginEnd="50dp"
                android:text="Обновить"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <Button
                android:id="@+id/button_sutki"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:background="#D1E2F0"
                android:text="Сутки"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView32" />

            <Button
                android:id="@+id/button_nedelya"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="#D1E2F0"
                android:text="Неделя"
                app:layout_constraintStart_toStartOf="@+id/button_sutki"
                app:layout_constraintTop_toBottomOf="@+id/button_sutki" />

            <Button
                android:id="@+id/button_mesyac"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginStart="50dp"
                android:background="#D1E2F0"
                android:text="МЕСЯЦ"
                app:layout_constraintStart_toEndOf="@+id/button_sutki"
                app:layout_constraintTop_toTopOf="@+id/button_sutki" />

            <Button
                android:id="@+id/button_god"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="#D1E2F0"
                android:text="год"
                app:layout_constraintStart_toStartOf="@+id/button_mesyac"
                app:layout_constraintTop_toTopOf="@+id/button_nedelya" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>