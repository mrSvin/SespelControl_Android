<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
            <gradient android:startColor="#00c4c7a9" android:endColor="#00D6DADF" android:angle="270" />
            <stroke android:width="5px" android:color="@color/colorPrimary" />
            <solid android:color="#99BBF0"/>
            <corners android:radius="4dp" />

        </shape>
    </item>


    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />

            <gradient android:startColor="#00c4c7a9" android:endColor="#00d6dadf" android:angle="270" />
            <stroke  android:width="3px" android:color="@color/colorPrimary" />
            <corners android:radius="8dp" />

        </shape>
    </item>


</selector>